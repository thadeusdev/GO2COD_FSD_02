<div id="<%= dom_id category %>">
  <p>
    <strong>Name:</strong>
    <%= category.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= category.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this category", [:admin, category] %>
    <%= link_to "Edit this category", edit_admin_category_path(category) %>
    <hr >
  <% end %>

</div>
