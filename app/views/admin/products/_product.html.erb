<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <% if product.images.any? %>
      <% product.images.each do |image| %>
        <%= image_tag image, style: "width: 100px; height: 100px" %>
      <% end %>
    <% end %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= product.category_id %>
  </p>

  <p>
    <strong>Active:</strong>
    <%= product.active %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "show this product", [:admin, product] %>
    <%= link_to "Edit this product", edit_admin_product_path(product) %>
  <% end %>

</div>
